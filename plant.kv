#:kivy 1.8.0

<UserInput>:
    GridLayout:
        rows: 2

        GridLayout:
            rows: 2

            GridLayout:
                rows: 3
                TextInput:
                    text: 'Plant Name'
                Label:
                    text: 'Row 2: Water Required'
                Label:
                    text: 'Row 3: Size'
            GridLayout:
                cols: 3
                Label:
                    text: 'Empty'
                Button:
                    id: calcButton
                    text: 'Calculate Button'
                    on_press: root.calculateWaterCost()
                Label:
                    text: 'Empty'


        GridLayout:
            rows: 1
            Label:
                id: result
                text: 'Result'
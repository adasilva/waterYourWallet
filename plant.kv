#:kivy 1.8.0

<UserInput>:
    GridLayout:
        rows: 2

        GridLayout: #A
            rows: 2

            GridLayout: #C
                rows: 3
                TextInput:
                    #size_hint: (1, 1/12.)
                    text: 'Plant Name'
                Label:
                    #size_hint: (1, 1/12.)
                    text: 'Row 2: Water Required'
                Label:
                    #size_hint: (1, 1/12.)
                    text: 'Row 3: Size'
            GridLayout: #D
                cols: 3
                Label:
                    #size_hint: (1/3., 1)
                    text: 'Empty'
                Button:
                    #size_hint: (1/3., 1)
                    text: 'Calculate Button'
                Label:
                    #size_hint: (1/3., 1)
                    text: 'Empty'


        GridLayout: #B
            rows: 1
            #size_hint: (1, 1/4.)
            Label:
                text: 'Result'
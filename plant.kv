#:kivy 1.8.0

<UserInput>:

    GridLayout:
        rows: 2

        GridLayout:
            rows: 2
            size_hint: (1, 3/4.)

            GridLayout:
                rows: 11
                Label:
                    size_hint: (1, 1/12.)
                    text: 'Where do you live?'
                GridLayout:
                    size_hint: (1, 1/12.)
                    cols: 4
                    ToggleButton:
                        id: cityAustin
                        text: 'Austin'
                        group: 'City'
                    ToggleButton:
                        id: cityHouston
                        text: 'Houston'
                        group: 'City'
                    ToggleButton:
                        id: cityDallas
                        text: 'Dallas'
                        group: 'City'
                    ToggleButton:
                        id: citySanAntonio
                        text: 'San Antonio'
                        group: 'City'

                Label:
                    size_hint: (1, 1/12.)
                    text: 'What kind of plant do you have?'
                TextInput:
                    size_hint: (1, 1/12.)
                    text: ''
                    multiline: False

                Label:
                    size_hint: (1, 1/12.)
                    text: 'How many plants do you have?'

                Slider:
                    size_hint: (1, 1/12.)
                    id:numPlants
                    max: 20
                    min: 1
                    value: 1
                    step: 1
                Label:
                    size_hint: (1, 1/12.)
                    text: '%s plant(s)' % int(numPlants.value)


                Label:
                    size_hint: (1, 1/12.)
                    text: 'How many inches of water does your plant\nrequire per week?'
                Slider:
                    id: waterSlider
                    size_hint: (1, 1/12.)
                    max:4
                    value: waterSlider.value

                Label:
                    size_hint: (1, 1/12.)
                    text: '%s inches of water per week' % round(float(waterSlider.value), 2)

                GridLayout:
                    size_hint: (1, 1/12.)
                    cols: 3
                    ToggleButton:
                        id: plantSmall
                        text: 'Small'
                        group: 'Size'
                    ToggleButton:
                        id: plantMedium
                        text: 'Medium'
                        group: 'Size'
                    ToggleButton:
                        id: plantLarge
                        text: 'Large'
                        group: 'Size'

            GridLayout:
                size_hint: (1, 1/4.)
                rows: 2
                Label:
                    size_hint:(1, 1/12.)
                    text: ''
                GridLayout:
                    cols: 3
                    Label:
                        size_hint: (1/3., 1)
                        text: ''
                    Button:
                        id: calcButton
                        size_hint: (1/3., 1)
                        text: 'Calculate'
                        on_press: root.calculateWaterCost()
                    Label:
                        size_hint: (1/3., 1)
                        text: ''


        GridLayout:
            size_hint: (1, 1/4.)
            rows: 1
            Label:
                id: result
                text: ''
                font_size: '20sp'
#:kivy 1.8.0

<UserInput>:
    GridLayout:
        rows: 3

        GridLayout:
            rows: 1
            size_hint: (1,1/5.)
            Button: 
                text: 'settings'
                size_hint: (1/4.,1)
                on_press: root.settingsPopup()
            Label:
                id: cityName
                text: 'City is Austin, TX'

        GridLayout:
            rows: 2
            size_hint: (1, 3/5.)

            GridLayout:
                rows: 3
                TextInput:
                    size_hint: (1, 1/12.)
                    text: 'Plant Name'
                    multiline: False
                TextInput:
                    id: waterRequired
                    size_hint: (1, 1/12.)
                    text: 'Water Required (inches per week)'

                GridLayout:
                    size_hint: (1, 1/12.)
                    cols: 3
                    ToggleButton:
                        id: plantSmall
                        text: 'Small'
                        group: 'Size'
                    ToggleButton:
                        id: plantMedium
                        text: 'Medium'
                        group: 'Size'
                    ToggleButton:
                        id: plantLarge
                        text: 'Large'
                        group: 'Size'

            GridLayout:
                size_hint: (1, 1/5.)
                cols: 3
                Label:
                    size_hint: (1/3., 1)
                    text: ''
                Button:
                    id: calcButton
                    size_hint: (1/3., 1)
                    text: 'Calculate'
                    on_press: root.calculateWaterCost()
                Label:
                    size_hint: (1/3., 1)
                    text: ''


        GridLayout:
            rows: 1
            Label:
                id: result
                text: 'Result'

<cityChoice>:
    Button:
        text:'done'
        on_press: root.
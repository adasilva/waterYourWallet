#:kivy 1.8.0

<LoginScreen>:
    AnchorLayout:
        GridLayout:
            cols: 2
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: (3/4.,1/2.)
            Label:
                text: 'username'
            TextInput:
                id: username
                multiline: False
                width: max(10*self.line_height,1/3.*self.parent.width)
                padding_y: (self.height-self.line_height)/2 
                padding_x: self.line_height
            Label:
                text: 'password'
            TextInput:
                id: password
                multiline: False
                password: True
                width: max(10*self.line_height,1/3.*self.parent.width)
                padding_y: (self.height-self.line_height)/2 
                padding_x: self.line_height
            Button:
                text: 'Save'
                on_press: root.save()

<UserInput>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1/12.
            Button: 
                size_hint_x: 1/5.
                text: 'Log in'
                on_press: root.manager.current = 'login'
            Button:
                size_hint_x: 1/5.
                on_press: root.settingsPopup()
                Image:
                    source: './img/gear.png'
                    y: self.parent.y + (self.parent.height-32)/2
                    x: self.parent.x + (self.parent.width-32)/2
                    size: 32,32
                    allow_stretch: True
            Label:
                id: cityLabel
                text: 'City:   Austin, TX'
                size_hint_x: 2/5.
            Button:
                size_hint_x: 1/5.
                on_press: root.helpPopup('Choose your plant size and city.\n\nClick outside the help screen.')
                Image:
                    source: './img/smallhelpicon.png'
                    y: self.parent.y + (self.parent.height-32)/2
                    x: self.parent.x + (self.parent.width-32)/2
                    size: 32,32
                    allow_stretch: True

        Label:
            size_hint: (1, 1/12.)
            text: '[color=CCFFCC]What kind of plant do you have?[/color]'
        AnchorLayout:
            size_hint: (1, 1/12.)

            TextInput:
                id: plantName
                size_hint_x: None
                width: max(10*self.line_height,1/3.*self.parent.width)
                anchor_x: 'center'
                text: ''
                padding_y: (self.height-self.line_height)/2 
                padding_x: self.line_height
                multiline: False
                length: 200
                on_text: root.openPlantNameDropdown()

        Label:
            size_hint: (1, 1/12.)
            text: '[color=CCFFCC]How many plants do you have?[/color]'

        GridLayout:
            cols: 2
            size_hint: (1, 1/12.)

            Slider:
                size_hint: (4/5., 1)
                id:numPlants
                max: 20
                min: 1
                value: 1
                step: 1
                padding: 20
            Label:
                size_hint: (1/5., 1)
                text: '%s' % int(numPlants.value)

        BoxLayout:
            size_hint: (1, 1/12.)
            orientation: 'horizontal'
            Label:
                id: waterLabel
                size_hint: (4/5., 1.)
                text: '[color=CCFFCC]How many inches of water\ndoes your plant require per week?[/color]'
                padding:
            Button:
                size_hint: (1/5.,1)
                on_press: root.helpPopup('One inch of water per week is a good starting point for most plants. Fruiting plants (e.g. tomatoes) might require more, while most herbs prefer less.\n\nAdjust up if you live in a dry area or if your plants are in pots. Adjust down if you expect a lot of rain.')
                Image:
                    source: './img/smallhelpicon.png'
                    y: self.parent.y + (self.parent.height-32)/2
                    x: self.parent.x + (self.parent.width-32)/2
                    size: 32,32
                    allow_stretch: True


        GridLayout:
            cols: 2
            size_hint: (1, 1/12.)

            Slider:
                id: waterSlider
                size_hint: (4/5.,1)
                max: 10
                step: .25
                value: 0
                padding: 20

            Label:
                size_hint: (1/5., 1)
                text: '%s' % round(float(waterSlider.value), 2)

        GridLayout:
            size_hint: (1, 1/12.)
            cols: 3
            ToggleButton:
                id: plantSmall
                text: 'Small'
                group: 'Size'
            ToggleButton:
                id: plantMedium
                text: 'Medium'
                group: 'Size'
            ToggleButton:
                id: plantLarge
                text: 'Large'
                group: 'Size'

        GridLayout:
            size_hint: (1, 1/12.)
            rows: 2
            AnchorLayout:
                Button:
                    id: calcButton
                    anchor_x: 'center'
                    size_hint: (1/3., 1)
                    text: 'Calculate'
                    on_press: root.calculateWaterCost()


        Label:
            id: result
            size_hint: (1, 1/12.)
            text: ''
            font_size: '20sp'


<CityChoice>:
    rows: 4
    ToggleButton:
        font_size: 18
        id: cityAustin
        text: 'Austin'
        group: 'City'
        state: 'down'
    ToggleButton:
        font_size: 18
        id: cityHouston
        text: 'Houston'
        group: 'City'
    ToggleButton:
        font_size: 18
        id: cityDallas
        text: 'Dallas'
        group: 'City'
    ToggleButton:
        font_size: 18
        id: citySanAntonio
        text: 'San \nAntonio'
        group: 'City'


<helpLayout>
    Label:
        id: helpText
        pos: root.pos
        text_size: self.size
        halign: 'center'
        valign: 'middle'

<loginLayout>
    cols: 2
    Label:
        text: 'Username'
    TextInput:
        id: inputUsername
        multiline: False
    Label:
        text: 'Password'
    TextInput:
        id: inputPassword
        multiline: False        
        secret: True

<Button>:
    font_size: '20sp'


<ToggleButton>:
    font_size: '20sp'

<Label>:
    font_size: '18sp'
    markup: True

<PlantNameDropdown>:
    id: PlantNameDropdown

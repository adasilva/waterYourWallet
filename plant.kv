#:kivy 1.8.0

<UserInput>:
    GridLayout:
        rows: 3
        GridLayout:
            rows:3
            size_hint: (1, 4/5.)

            GridLayout:
                rows: 12

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 1/12.
                    Button:
                        text: 'Settings'
                        size_hint_x: 1/4.
                        on_press: root.settingsPopup()

                    Label:
                        id: cityLabel
                        text: 'City:   Austin, TX'

                Label:
                    size_hint: (1, 1/12.)
                    text: 'What kind of plant do you have?'
                TextInput:
                    size_hint: (1, 1/12.)
                    text: ''
                    multiline: False
                    length: 200

                Label:
                    size_hint: (1, 1/12.)
                    text: 'How many plants do you have?'

                GridLayout:
                    cols: 2
                    size_hint: (1, 1/12.)

                    Slider:
                        size_hint: (4/5., 1)
                        id:numPlants
                        max: 20
                        min: 1
                        value: 1
                        step: 1
                        padding: 20
                    Label:
                        size_hint: (1/5., 1)
                        text: '%s' % int(numPlants.value)


                Label:
                    size_hint: (1, 1/12.)
                    text: 'How many inches of water does your plant\nrequire per week?'
                GridLayout:
                    cols: 2
                    size_hint: (1, 1/12.)

                    Slider:
                        id: waterSlider
                        size_hint: (4/5.,1)
                        max:4
                        step: .25
                        value: 0
                        padding: 20

                    Label:
                        size_hint: (1/5., 1)
                        text: '%s' % round(float(waterSlider.value), 2)

                Label:
                    size_hint:(1, 1/12.)
                    text: '[color=CCFFCC]HINT: a plant that requires a lot of water usually\nneeds up to 2 inches of water per week.[/color]'
                    font_size: '13sp'
                    markup: True

                GridLayout:
                    size_hint: (1, 1/12.)
                    cols: 3
                    ToggleButton:
                        id: plantSmall
                        text: 'Small'
                        group: 'Size'
                    ToggleButton:
                        id: plantMedium
                        text: 'Medium'
                        group: 'Size'
                    ToggleButton:
                        id: plantLarge
                        text: 'Large'
                        group: 'Size'

            GridLayout:
                size_hint: (1, 1/5.)
                rows: 2
                Label:
                    size_hint:(1, 1/12.)
                    text: ''
                GridLayout:
                    cols: 3
                    Label:
                        size_hint: (1/3., 1)
                        text: ''
                    Button:
                        id: calcButton
                        size_hint: (1/3., 1)
                        text: 'Calculate'
                        on_press: root.calculateWaterCost()
                    Label:
                        size_hint: (1/3., 1)
                        text: ''


        GridLayout:
            size_hint: (1, 1/5.)
            rows: 1
            Label:
                id: result
                text: ''
                font_size: '20sp'


<CityChoice>:
    GridLayout:
        cols:4
        size_hint: (1,1/4.)
        pos_hint: {'x':0,'y':.5}
        ToggleButton:
            font_size: 14
            id: cityAustin
            text: 'Austin'
            group: 'City'
            state: 'down'
        ToggleButton:
            font_size: 14
            id: cityHouston
            text: 'Houston'
            group: 'City'
        ToggleButton:
            font_size: 14
            id: cityDallas
            text: 'Dallas'
            group: 'City'
        ToggleButton:
            font_size: 14
            id: citySanAntonio
            text: 'San Antonio'
            group: 'City'

        Button:
            id: closeSettingsButton
            text: 'Done'


<Button>:
    font_size: '20sp'

<ToggleButton>:
    font_size: '20sp'

<Label>:
    font_size: '20sp'
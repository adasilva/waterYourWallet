#:kivy 1.8.0

<UserInput>:
    GridLayout:
        rows: 2

        GridLayout:
            rows: 2
            size_hint: (1, 3/4.)

            GridLayout:
                rows: 3
                TextInput:
                    size_hint: (1, 1/12.)
                    text: 'Plant Name'
                    multiline: False
                TextInput:
                    size_hint: (1, 1/12.)
                    text: 'Water Required'

                GridLayout:
                    size_hint: (1, 1/12.)
                    cols: 3
                    ToggleButton:
                        text: 'Small'
                        group: 'Size'
                    ToggleButton:
                        text: 'Medium'
                        group: 'Size'
                    ToggleButton:
                        text: 'Large'
                        group: 'Size'

            GridLayout:
                size_hint: (1, 1/4.)
                cols: 3
                Label:
                    size_hint: (1/3., 1)
                    text: ''
                Button:
                    size_hint: (1/3., 1)
                    text: 'Calculate Button'
                Label:
                    size_hint: (1/3., 1)
                    text: ''


        GridLayout:
            rows: 1
            size_hint: (1, 1/4.)
            Label:
                text: 'Result'